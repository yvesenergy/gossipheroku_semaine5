<body>
	<%=form_tag '/static_page/modif' method= "POST" do %>
  <div class="form-group">
    <label for="inputsm">Author</label>
    <input class="form-control input-sm" id="inputsm" type="text" name="author_id" value="<%=@go.id%>">
  </div>
  <div class="form-group">
    <label for="inputlg">Taper pour modifier votre potin</label>
